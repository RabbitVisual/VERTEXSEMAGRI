# Credenciais OAuth2 do PSP
PIX_CLIENT_ID=
PIX_CLIENT_SECRET=
# Caminho para o certificado SSL (se necessário)
PIX_CERTIFICATE_PATH=
# Secret para validação de webhook
PIX_WEBHOOK_SECRET=
# URL do webhook (será configurada automaticamente)
PIX_WEBHOOK_URL=${APP_URL}/api/webhook/pix
# Nome do PSP (gerencianet, mercadopago, pagseguro, etc)
PIX_PSP_NAME=gerencianet
# Ambiente: sandbox ou production
PIX_ENVIRONMENT=sandbox
# Tempo de expiração do QR Code em segundos (padrão: 3600 = 1 hora)
PIX_QRCODE_EXPIRATION=3600
# Habilitar logs detalhados do PIX
PIX_DEBUG=false
# Timeout para requisições à API PIX em segundos
PIX_TIMEOUT=30

# Configurações de Split (Plataforma)
# Chave PIX da Plataforma (Centralizadora)
PIX_CHAVE_PLATAFORMA=
# Taxa da Plataforma em % (ex: 5.00)
PIX_TAXA_PLATAFORMA=0
# Tarifa Fixa por transação (ex: 0.99)
PIX_TARIFA_FIXA=0.00
# Ativar divisão automática de pagamentos (true/false, 1/0)
